#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

if [[ "${TRACE-0}" == "1" ]]; then
	set -o xtrace
fi

is_command() {
	type "$1" >/dev/null 2>&1
}

main() {
	if is_command brew; then
		brew bundle --no-lock --file=/dev/stdin <<-EOF
{{- range .packages.base.brew }}
		 	brew {{ . | quote }}
{{- end }}
{{- range (index .packages .profile.key "brew") }}
		 	brew {{ . | quote }}
{{- end }}
{{- range (index .packages .profile.key "cask") }}
		 	cask {{ . | quote }}
{{- end }}
		EOF
	fi
}

main "$@"
